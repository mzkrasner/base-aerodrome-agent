{
  "name": "aerodrome-trading-agent",
  "version": "1.0.0",
  "description": "Autonomous spot trading agent for Aerodrome DEX on Base chain using Mastra",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec tsx src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "check-all": "npm run type-check && npm run lint && npm run format:check",
    "cli": "tsx src/cli/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:check": "drizzle-kit check",
    "mastra:dev": "npx mastra dev",
    "mastra:build": "npx mastra build",
    "mastra:start": "npx mastra start"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@mastra/core": "^0.10.1",
    "@mcpdotdirect/evm-mcp-server": "^1.2.0",
    "@the-convocation/twitter-scraper": "^0.17.1",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "alchemy-sdk": "^3.6.5",
    "axios": "^1.6.8",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^12.1.0",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "dotenv": "^16.3.1",
    "drizzle-orm": "^0.43.1",
    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.2",
    "ethers": "^6.16.0",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "hono": "^3.11.7",
    "ioredis": "^5.3.2",
    "lru-cache": "^11.1.0",
    "mastra": "^0.10.13",
    "natural": "^6.7.0",
    "node-cron": "^3.0.3",
    "openai": "^4.20.1",
    "pg": "^8.10.0",
    "rss-parser": "^3.13.0",
    "sentiment": "^5.0.2",
    "winston": "^3.11.0",
    "ws": "^8.14.2",
    "zod": "^3.25.17"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.8.10",
    "@types/pg": "^8.6.6",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "drizzle-kit": "^0.31.1",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "tsx": "^4.6.2",
    "typescript": "^5.2.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "keywords": [
    "aerodrome",
    "base-chain",
    "defi",
    "dex",
    "mastra",
    "ai-agent",
    "trading-bot"
  ],
  "author": "Mark Krasner",
  "license": "MIT"
}
